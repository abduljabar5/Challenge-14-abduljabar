

<div class="card">
  <h2 class="card-header text-center">
    {{title}}
  </h2>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p>{{comment}} </p>
      <footer class="blockquote-footer"> {{user.username}} {{format_date date_created}} </footer>

    </blockquote>
     <a href="/" class="card-link text-dark">Back</a>
     {{#if comments}}
      <a href="#collapseExample" data-bs-toggle="collapse" class="card-link text-dark">View Comments</a>
      {{/if}}
      {{#if logged_in}}
    <a href="#staticBackdrop" data-bs-toggle="modal" class="card-link text-dark">Add comment</a>
    {{/if}}
  </div>
</div>
{{!-- comments --}}
 {{#each comments as |comment|}}
<div class="collapse" id="collapseExample">
  <div class="card card-body">
    {{comment.user_comment}} <small> <strong  class="blockquote-footer">{{comment.user.username}}</strong>  {{format_date comment.date_created}}</small>
  </div>
  <div class="blockquote-footer"> {{format_date comment.date_created}} hi </div>
</div>
{{/each}}

<!-- new comment form -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="staticBackdropLabel">Add Comment</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
          <textarea class="form-control" id="Textarea1" rows="3"></textarea>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" data-id="{{id}}" id="commentsubbtn">Understood</button>
      </div>
    </div>
  </div>
</div>
<script src="/blog.js"></script>